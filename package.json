{
  "name": "mock-api-service",
  "version": "1.0.0",
  "description": "Enterprise-grade RESTful mock API service with dynamic endpoint configuration",
  "author": "Andr√©s Beltran <cabeltrantello@gmail.com>",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/cabeltrantello/TigoChallenge.git",
    "directory": "server"
  },
  "bugs": {
    "url": "https://github.com/cabeltrantello/TigoChallenge.git/issues"
  },
  "homepage": "https://github.com/cabeltrantello/TigoChallenge.git#readme",
  "keywords": [
    "rest-api",
    "mock-service",
    "api-simulation",
    "testing",
    "nodejs"
  ],
  "main": "app.js",
  "scripts": {
    "preinstall": "npx npm-force-resolutions",
    "start": "NODE_ENV=production node --enable-source-maps app.js",
    "dev": "NODE_ENV=development nodemon --inspect app.js",
    "test": "npm run test:unit && npm run test:integration",
    "test:unit": "NODE_ENV=test jest --testPathPattern=unit --coverage",
    "test:integration": "NODE_ENV=test jest --testPathPattern=integration",
    "test:watch": "jest --watch",
    "lint": "eslint 'src/**/*.js' 'test/**/*.js' --fix",
    "lint:ci": "eslint 'src/**/*.js' 'test/**/*.js' --format junit -o reports/eslint-report.xml",
    "docs": "swagger-jsdoc -d swaggerDef.js -o docs/openapi.yaml",
    "security:audit": "npm audit --production --audit-level=critical",
    "precommit": "npm run lint && npm test",
    "docker:build": "docker build -t mock-api-service .",
    "docker:run": "docker run -p 3000:3000 --env-file .env mock-api-service"
  },
  "dependencies": {
    "bcryptjs": "^2.4.3",
    "body-parser": "^1.20.2",
    "cors": "^2.8.5",
    "dotenv": "^16.4.5",
    "express": "^4.19.2",
    "express-rate-limit": "^6.7.0",
    "handlebars": "^4.7.8",
    "helmet": "^7.1.0",
    "joi": "^17.12.0",
    "jsonwebtoken": "^9.0.2",
    "morgan": "^1.10.0",
    "node-json-db": "^2.1.3",
    "swagger-ui-express": "^4.6.3",
    "uuid": "^9.0.1",
    "winston": "^3.13.0"
  },
  "devDependencies": {
    "chai": "^4.3.8",
    "eslint": "^8.57.0",
    "eslint-config-airbnb-base": "^15.0.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-import": "^2.29.1",
    "eslint-plugin-jest": "^28.9.0",
    "eslint-plugin-security": "^1.7.1",
    "jest": "^29.7.0",
    "mocha": "^10.4.0",
    "nodemon": "^3.1.0",
    "prettier": "^3.2.5",
    "supertest": "^6.3.4",
    "swagger-jsdoc": "^6.2.8"
  },
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=9.0.0"
  },
  "private": true,
  "files": [
    "src",
    "app.js",
    ".env.example",
    "LICENSE"
  ],
  "resolutions": {
    "minimist": "^1.2.8"
  },
  "jest": {
    "testEnvironment": "node",
    "collectCoverageFrom": [
      "src/**/*.js",
      "!src/config/**",
      "!src/views/**"
    ],
    "coverageThreshold": {
      "global": {
        "branches": 85,
        "functions": 90,
        "lines": 90,
        "statements": 90
      }
    },
    "coverageReporters": [
      "text",
      "lcov"
    ]
  },
  "eslintConfig": {
    "extends": [
      "airbnb-base",
      "plugin:security/recommended",
      "prettier"
    ],
    "plugins": [
      "security",
      "jest"
    ],
    "env": {
      "node": true,
      "jest": true,
      "es2022": true
    },
    "parserOptions": {
      "ecmaVersion": "latest",
      "sourceType": "module"
    },
    
    "rules": {
      "import/no-extraneous-dependencies": [
        "error",
        {
          "devDependencies": [
            "**/*.test.js",
            "**/*.spec.js"
          ]
        }
      ],
      "security/detect-object-injection": "off"
    }
  },
  "prettier": {
    "printWidth": 100,
    "singleQuote": true,
    "trailingComma": "all",
    "arrowParens": "avoid"
  }
}
